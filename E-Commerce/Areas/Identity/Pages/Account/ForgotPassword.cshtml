@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <form method="post" class="p-4 shadow rounded-3" style="background-color: #f0f0f5;">
            <h2 class="text-center mb-4 text-uppercase text-primary">Forgot Your Password?</h2>
            <h3 class="text-center mb-4 text-muted">Enter your email</h3>

            <p class="text-center mb-4 text-muted">
                Please enter the email address associated with your account, and we will send you instructions to reset your password.
            </p>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email Address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Reset Button -->
            <button type="submit" class="w-100 btn btn-lg btn-warning rounded-pill mb-3">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}