@model IEnumerable<ProductItem>

<div class="product-grid-container">
    <h1 class="page-title">Featured Collection</h1>
    
    <div class="product-grid">
        @foreach (var productItem in Model)
        {
            <div class="product-item">
                <div class="product-card">
                    <div class="image-wrapper">
                        <a asp-action="ProductItemDetails" asp-route-productId="@productItem.Id">
                            <img src="@productItem.ImageUrl" alt="@productItem.Product?.Name" />
                        </a>
                        <span class="sale-badge">Sale</span>
                        <div class="quick-actions">
                            <a asp-action="ProductItemDetails" 
                               asp-controller="Home" 
                               asp-route-ProductId="@productItem.Id" 
                               class="add-to-cart">
                                Add to Cart
                            </a>
                        </div>
                    </div>
                    
                    <div class="product-info">
                        <h2 class="product-name">@productItem.Product?.Name</h2>
                        <div class="sku">SKU: @productItem.SKU</div>
                        <div class="price">
                            @productItem.Price.ToString("C", new System.Globalization.CultureInfo("en-US"))
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        color: #1a202c;
        line-height: 1.5;
    }

    .product-grid-container {
        max-width: 1400px;
        margin: 3rem auto;
        padding: 0 1.5rem;
    }

    .page-title {
        text-align: center;
        font-size: 2.25rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 3rem;
        letter-spacing: -0.025em;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
    }

    .product-card {
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        position: relative;
        transition: all 0.3s ease;
        height: 100%;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                    0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
                    0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .image-wrapper {
        position: relative;
        padding-top: 100%;
        background: #f7fafc;
    }

    .image-wrapper img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-card:hover .image-wrapper img {
        transform: scale(1.05);
    }

    .sale-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: #e53e3e;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.875rem;
        font-weight: 600;
        z-index: 10;
    }

    .quick-actions {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1rem;
        background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
        transform: translateY(100%);
        transition: transform 0.3s ease;
    }

    .product-card:hover .quick-actions {
        transform: translateY(0);
    }

    .add-to-cart {
        display: block;
        background: #3182ce;
        color: white;
        text-decoration: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        text-align: center;
        font-weight: 600;
        transition: background-color 0.2s ease;
    }

    .add-to-cart:hover {
        background: #2c5282;
        color: white;
        text-decoration: none;
    }

    .product-info {
        padding: 1.5rem;
    }

    .product-name {
        font-size: 1.125rem;
        font-weight: 600;
        color: #2d3748;
        margin: 0 0 0.5rem 0;
    }

    .sku {
        font-size: 0.875rem;
        color: #718096;
        margin-bottom: 0.5rem;
    }

    .price {
        font-size: 1.25rem;
        font-weight: 700;
        color: #2c5282;
    }

    
</style>
