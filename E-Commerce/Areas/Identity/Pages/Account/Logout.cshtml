@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg rounded-4">
                <div class="card-body text-center">
                    <h2 class="text-primary mb-4">@ViewData["Title"]</h2>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <p class="text-muted mb-4">Are you sure you want to log out?</p>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger btn-lg w-100 rounded-pill mb-3">Log Out</button>
                        </form>
                    }
                    else
                    {
                        <p class="text-success">You have successfully logged out of the application.</p>
                        <p>
                            <a href="@Url.Page("/Login")" class="btn btn-primary btn-lg w-100 rounded-pill">Go to Login Page</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}