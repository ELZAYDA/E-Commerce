@model IEnumerable<Category>

<div class="category-grid-container">
    <div class="container-fluid px-4 py-5">
        <div class="row justify-content-center mb-5">
            <div class="col-12 text-center">
                <h1 class="display-4 category-title">Discover Our Collections</h1>
                <p class="lead text-muted">Explore our diverse range of product categories</p>
            </div>
        </div>

        <div class="category-grid">
            @foreach (var category in Model)
            {
                <div class="category-card">
                    <div class="category-card-inner">
                        <div class="category-image-wrapper">
                            <a asp-action="ProductIndex" asp-route-Id="@category.Id" class="category-link">
                                <div class="category-image" style="background-image: url('@category.ImageUrl')">
                                    <div class="category-overlay">
                                        <span class="category-name">@category.Name</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #3b82f6;
        --secondary-color: #6b7280;
        --background-color: #f9fafb;
        --text-color: #1f2937;
        --transition-speed: 0.3s;
    }

    .category-grid-container {
        background-color: var(--background-color);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    .category-title {
        color: var(--text-color);
        font-weight: 800;
        margin-bottom: 1rem;
    }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
        padding: 0 2rem;
    }

    .category-card {
        perspective: 1000px;
        position: relative;
    }

    .category-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        transition: transform var(--transition-speed);
        transform-style: preserve-3d;
    }

    .category-card:hover .category-card-inner {
        transform: rotateY(10deg);
    }

    .category-image-wrapper {
        position: relative;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        transition: all var(--transition-speed);
    }

    .category-image {
        width: 100%;
        height: 300px;
        background-size: cover;
        background-position: center;
        position: relative;
        transition: transform var(--transition-speed);
    }

    .category-card:hover .category-image {
        transform: scale(1.05);
    }

    .category-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.6));
        display: flex;
        align-items: flex-end;
        justify-content: center;
        padding: 1rem;
        opacity: 0;
        transition: opacity var(--transition-speed);
    }

    .category-card:hover .category-overlay {
        opacity: 1;
    }

    .category-name {
        color: white;
        font-size: 1.25rem;
        font-weight: 700;
        text-transform: uppercase;
        text-align: center;
        letter-spacing: 1px;
    }

    .category-link {
        text-decoration: none;
        display: block;
    }

    
</style>

<!-- Font Awesome for potential future icon use -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">