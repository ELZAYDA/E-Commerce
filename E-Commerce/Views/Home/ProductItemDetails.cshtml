@model ShoppingCart

<form method="post" class="product-detail-container">
    <input hidden asp-for="ProductItemId" />
    
    <div class="product-card">
        <div class="navigation-bar">
            <a asp-action="productitemindex" asp-route-Id="@Model.ProductItem?.ProductId" class="back-button">
                <i class="fas fa-arrow-left"></i>
                <span>Back to Products</span>
            </a>
        </div>

        <div class="product-content">
            <!-- Product Image Section -->
            <div class="product-image-section">
                <div class="image-container">
                    <img src="@Model.ProductItem?.ImageUrl" alt="@Model.ProductItem?.Product?.Name" />
                </div>
            </div>

            <!-- Product Info Section -->
            <div class="product-info-section">
                <div class="product-header">
                    <h1 class="product-title">@Model.ProductItem?.Product?.Name</h1>
                    <span class="product-category">@Model.ProductItem.Product.Name</span>
                </div>

                <div class="product-details">
                    <div class="sku-info">
                        SKU: <span>@Model.ProductItem?.SKU</span>
                    </div>
                    <div class="price-tag">
                        @Model.ProductItem.Price.ToString("C", new System.Globalization.CultureInfo("en-US"))
                    </div>
                </div>

                <div class="purchase-section">
                    <div class="quantity-selector">
                        <label for="quantity">Quantity</label>
                        <div class="quantity-input">
                            <input asp-for="@Model.Quantity" 
                                   type="number" 
                                   value="1" 
                                   min="1" 
                                   id="quantity" />
                        </div>
                    </div>

                    <button type="submit" class="add-to-cart-button">
                        Add to Cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

<style>
    body {
        background-color: #f5f7fa;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        color: #2d3436;
        line-height: 1.6;
    }

    .product-detail-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .product-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .navigation-bar {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid #edf2f7;
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #64748b;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .back-button:hover {
        color: #334155;
    }

    .product-content {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        padding: 2rem;
    }

    

    .product-image-section {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .image-container {
        width: 100%;
        max-width: 400px;
        aspect-ratio: 1;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .image-container:hover img {
        transform: scale(1.05);
    }

    .product-info-section {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .product-header {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .product-title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        color: #1a202c;
    }

    .product-category {
        display: inline-block;
        background: #ebf4ff;
        color: #3182ce;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 500;
        align-self: flex-start;
    }

    .product-details {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .sku-info {
        color: #64748b;
        font-size: 0.875rem;
    }

    .price-tag {
        font-size: 2rem;
        font-weight: 700;
        color: #047857;
    }

    .purchase-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-top: auto;
    }

    .quantity-selector {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .quantity-selector label {
        font-weight: 500;
        color: #4a5568;
    }

    .quantity-input {
        max-width: 200px;
    }

    .quantity-input input {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.2s ease;
    }

    .quantity-input input:focus {
        border-color: #3182ce;
    }

    .add-to-cart-button {
        background: #e53e3e;
        color: white;
        border: none;
        border-radius: 12px;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        max-width: 300px;
    }

    .add-to-cart-button:hover {
        background: #c53030;
        transform: translateY(-2px);
    }

    .add-to-cart-button:active {
        transform: translateY(0);
    }

    
    
</style>