@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<div class="password-change-container">
    <div class="password-change-card">
        <div class="card-header">
            <h3>@ViewData["Title"]</h3>
        </div>
        
        <partial name="_StatusMessage" for="StatusMessage" />
        
        <form id="change-password-form" method="post" class="password-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>
            
            <div class="form-group">
                <div class="input-wrapper">
                    <i class="icon-lock"></i>
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Current Password" />
                </div>
                <span asp-validation-for="Input.OldPassword" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <div class="input-wrapper">
                    <i class="icon-key"></i>
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New Password" />
                </div>
                <span asp-validation-for="Input.NewPassword" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <div class="input-wrapper">
                    <i class="icon-check"></i>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm New Password"/>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="validation-error"></span>
            </div>
            
            <button type="submit" class="btn-submit">Update Password</button>
        </form>
    </div>
</div>

<style>
    .password-change-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
        background-color: #f4f6f9;
    }

    .password-change-card {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 450px;
        padding: 30px;
    }

    .card-header h3 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .password-form .form-group {
        margin-bottom: 15px;
    }

    .input-wrapper {
        position: relative;
    }

    .input-wrapper i {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #aaa;
    }

    .form-control {
        padding-left: 45px;
        height: 50px;
        border: 1px solid #e1e1e1;
        border-radius: 8px;
    }

    .validation-error {
        color: #dc3545;
        font-size: 0.85em;
        margin-top: 5px;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

    .btn-submit:hover {
        background-color: #0056b3;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}