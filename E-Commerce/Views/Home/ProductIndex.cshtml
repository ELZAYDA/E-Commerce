@model IEnumerable<Product>

<div class="container-fluid px-4 py-5">
    <h2 class="display-4 text-center mb-5">Featured Products</h2>

    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="product-card h-100">
                    <div class="image-wrapper">
                        <a asp-action="ProductItemIndex" asp-route-Id="@product.Id" class="product-link">
                            <img src="@product.ImageUrl" class="product-image" alt="@product.Name" />
                            <div class="overlay">
                                <span class="view-details">View Details</span>
                            </div>
                        </a>
                    </div>
                    <div class="product-info">
                        <span class="category">@product.Category?.Name</span>
                        <h3 class="product-name">@product.Name</h3>
                        <p class="description">@Html.Raw(@product.Description)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .image-wrapper {
        position: relative;
        padding-top: 100%;
        overflow: hidden;
    }

    .product-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-link:hover .overlay {
        opacity: 1;
    }

    .product-link:hover .product-image {
        transform: scale(1.1);
    }

    .view-details {
        color: white;
        font-size: 1.1rem;
        font-weight: 500;
        padding: 12px 24px;
        border: 2px solid white;
        border-radius: 30px;
        background: rgba(0, 0, 0, 0.4);
    }

    .product-info {
        padding: 1.5rem;
    }

    .category {
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
        color: #666;
        font-weight: 600;
    }

    .product-name {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0.5rem 0;
        color: #333;
    }

    .description {
        font-size: 0.9rem;
        color: #666;
        line-height: 1.5;
        margin-bottom: 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .display-4 {
        font-weight: 600;
        color: #2d3436;
    }

    body {
        background-color: #f8f9fa;
    }
</style>