@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-center text-dark mb-4">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0">
            <div class="card-body p-5">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-group mb-4">
                        <label for="Username" class="form-label">Username</label>
                        <input asp-for="Username" class="form-control form-control-lg" placeholder="Please choose your username." disabled />
                    </div>

                    <div class="form-group mb-4">
                        <label for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" placeholder="Please enter your phone number." />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg rounded-pill">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Modern look styling */
    .card {
        border-radius: 1rem;
        background-color: #fff;
    }

    .card-body {
        padding: 2rem;
    }

    .form-control {
        border-radius: 0.75rem;
    }

    .form-label {
        font-weight: 500;
    }

    .btn {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    
</style>