@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <form method="post" class="p-4 shadow rounded-3" style="background-color: #f0f0f5;">
            <h2 class="text-center mb-4 text-uppercase text-primary">Resend Email Confirmation</h2>

            <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-pill" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Resend Button -->
            <button type="submit" class="w-100 btn btn-lg btn-primary rounded-pill mb-3">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}