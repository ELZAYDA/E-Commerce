@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Global Styles */
        body {
            background-image: url('https://example.com/your-background-image.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Container */
        .container {
            max-width: 600px;
            margin-top: 50px;
            padding: 15px;
        }

        /* Card Styling */
        .card {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
        }

        /* Header */
        h2 {
            font-weight: bold;
            color: #007bff;
        }

        h4 {
            font-weight: 400;
            color: #6c757d;
        }

        /* Form Fields */
        .form-floating {
            margin-bottom: 15px;
        }

            /* Floating Label Styling */
            .form-floating .form-control {
                border-radius: 25px;
                border: 1px solid #ddd;
                padding: 15px;
                transition: all 0.3s ease;
            }

            .form-floating label {
                padding-left: 15px;
                font-size: 1rem;
                font-weight: 600;
                color: #6c757d;
            }

        /* Input Focus Effect */
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
            outline: none;
        }

        /* Submit Button */
        .submit-btn {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            padding: 12px 20px;
            border-radius: 25px;
            border: none;
            transition: all 0.3s ease;
        }

            /* Submit Button Hover */
            .submit-btn:hover {
                background-color: #0056b3;
                cursor: pointer;
            }

        /* Validation Error Messages */
        .text-danger {
            font-size: 0.875rem;
            font-weight: 500;
        }

        /* Error Messages */
        span.text-danger {
            display: block;
            margin-top: 5px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg rounded-3">
                    <div class="card-body p-4">
                        <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>
                        <h4 class="text-center text-muted mb-4">Reset your password</h4>
                        <hr />

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <!-- Hidden Code Input -->
                            <input asp-for="Input.Code" type="hidden" />

                            <!-- Email Field -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control form-field" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Password Field -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control form-field" autocomplete="new-password" aria-required="true" placeholder="Enter your new password" />
                                <label asp-for="Input.Password">New Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <!-- Confirm Password Field -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" class="form-control form-field" autocomplete="new-password" aria-required="true" placeholder="Confirm your new password" />
                                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="w-100 btn btn-lg btn-primary rounded-pill mb-3 submit-btn">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>