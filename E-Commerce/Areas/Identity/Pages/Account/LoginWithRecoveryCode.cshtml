@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg rounded-4">
                <div class="card-body">
                    <h2 class="text-center mb-4 text-primary">@ViewData["Title"]</h2>
                    <p class="text-center text-muted mb-4">You have requested to log in with a recovery code. This login will not be remembered until you provide an authenticator app code at login or disable 2FA and log in again.</p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.RecoveryCode" class="form-control form-control-lg rounded-pill" autocomplete="off" placeholder="Enter recovery code" />
                            <label asp-for="Input.RecoveryCode" class="form-label">Recovery Code</label>
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                        </div>

                        <div>
                            <button type="submit" class="w-100 btn btn-lg btn-primary rounded-pill mb-3 py-2">Log in</button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            <a href="@Url.Page("./Login")" class="text-primary">Go back to login page</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}